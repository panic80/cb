{
  "name": "chatbot",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"NODE_ENV=development PORT=3001 node server/main.js\" \"vite\"",
    "build": "vite build",
    "preview": "vite preview",
    "proxy": "node server/proxy.js",
    "start": "node server/main.js",
    "deploy": "pm2 deploy production",
