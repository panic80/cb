{
  "name": "chatbot",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development vite --port 3001",
    "dev:server": "NODE_ENV=development node server/main.js",
    "dev:full": "concurrently \"npm run dev:server\" \"npm run dev\"",
    "build": "vite build",
    "build:dev": "vite build --mode development",
    "build:staging": "vite build --mode staging",
    "build:prod": "vite build --mode production",
    "build:production": "vite build --mode production",
    "preview": "vite preview",
    "start": "node server/main.js",
    "lint": "echo 'Linting not configured' && exit 0",
    "deploy": "pm2 deploy production",
    "deploy:setup": "pm2 deploy production setup",
    "deploy:staging": "npm run build:staging && pm2 deploy staging",
    "deploy:production": "npm run build:prod && pm2 deploy production",
    "deploy:staging:script": "./scripts/deploy.sh staging",
    "deploy:production:script": "./scripts/deploy.sh production",
    "rollback:staging": "pm2 deploy staging revert 1",
    "rollback:production": "pm2 deploy production revert 1",
    "rollback:staging:script": "./scripts/rollback.sh staging",
    "rollback:production:script": "./scripts/rollback.sh production",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "health-check": "curl -f http://localhost:3000/health || exit 1",
    "health-check:staging": "./scripts/health-check.sh http://staging.32cbgg8.com/health",
    "health-check:production": "./scripts/health-check.sh http://32cbgg8.com/health",
    "health-check:local": "./scripts/health-check.sh http://localhost:3000/health"
  },
  "dependencies": {
    "@google/genai": "^1.4.0",
    "@google/generative-ai": "^0.21.0",
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-collapsible": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@use-gesture/react": "^10.3.1",
    "axios": "^1.8.1",
    "cheerio": "^1.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "framer-motion": "^11.18.2",
    "http-proxy-middleware": "^2.0.6",
    "lucide-react": "^0.513.0",
    "marked": "^15.0.6",
    "multer": "^2.0.1",
    "next-themes": "^0.4.6",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.10.0",
    "pm2": "^5.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.1.5",
    "redis": "^4.7.1",
    "remark-gfm": "^4.0.1",
    "remeda": "^2.22.5",
    "shiki": "^1.29.2",
    "sonner": "^2.0.5",
    "styled-jsx": "^5.1.6",
    "tailwind-merge": "^3.3.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^3.1.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "happy-dom": "^17.1.8",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "terser": "^5.41.0",
    "vite": "^4.5.5",
    "vite-plugin-compression": "^0.5.1",
    "vitest": "^3.0.7"
  }
}
